@model SocialNetwork.Mvc.Models.PagedList<SocialNetwork.Mvc.Models.PersonViewModel>
@{
    ViewBag.Title = "Search";
}

<div class="row">
    @using (Ajax.BeginForm("Search", new AjaxOptions { UpdateTargetId = "search-results", InsertionMode = InsertionMode.Replace, HttpMethod = "get" }))
    {
        @Html.TextBox("searchString")
        <input type="submit" class="btn btn-default" value="Search" />
    }
</div>
<div class="container" id="search-results">
    @if (Model != null && Model.Count() > 0)
    {
        @Html.Partial("SearchResults", Model)
    }
</div>
