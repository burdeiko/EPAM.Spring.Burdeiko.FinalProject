@model SocialNetwork.Mvc.Models.PersonViewModel

<div class="row">
    <div class="col-sm-3">
        <img src="@Url.Action("RenderAvatar", "User", new { id = Model.Id })" alt="Avatar" , class="img-responsive"/>
        @if (Request.Url.Segments.Last() == "IncomingRequests")
        {
            @Html.ActionLink("Accept", "AcceptFriendRequest", "Friends", new { senderId = Model.Id , returnUrl = Request.RawUrl}, new { Class = "btn btn-default"})
        }
    </div>
    <div class="col-sm-9">
        <a href="@Url.Action("Index", "User", new { id = Model.Id })">@Model.FirstName @Model.LastName</a>
    </div>
</div>