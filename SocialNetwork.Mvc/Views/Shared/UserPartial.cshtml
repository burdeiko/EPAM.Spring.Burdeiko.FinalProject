@model SocialNetwork.Mvc.Models.PersonViewModel

<div class="row">
    <div class="col-sm-3">
        <div class="avatar-container">
        <img src="@Url.Action("RenderAvatar", "User", new { id = Model.Id })" alt="Avatar" , class="avatar img-circle"/>
            </div>
        @Html.Action("GetFriendRequestButton", "User", new { personId = Model.Id })
    </div>
    <div class="col-sm-9">
        <a href="@Url.Action("Index", "User", new { id = Model.Id })">@Model.FirstName @Model.LastName</a>
    </div>
</div>
<hr />